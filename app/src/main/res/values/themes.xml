<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamEnergy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#666666</item>
        <item name="colorPrimaryVariant">#19ABC2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#19ABC2</item>
        <item name="colorSecondaryVariant">#19ABC2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_input_layout</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#254D66</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="InputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_input_layout</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#254D66</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="AgreeButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/shape_agree_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">58dp</item>
        <item name="titleTextColor">#254D66</item>
        <item name="titleTextAppearance">@style/AppToolbarTextAppearance</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="background">@drawable/toolbar_background</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/AppToolbarTextAppearance</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="AppToolbarTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHint</item>
        <item name="android:textColorHint">@color/black_color_alpha87</item>
        <item name="hintTextColor">@color/black_color_alpha87</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <!--        <item name="android:background">@drawable/shape_nft_input_layout</item>-->
    </style>

    <style name="TextInputLayoutHint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_8</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_info_dialog</item>
    </style>

    <style name="ViewLineStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_gray_color</item>
    </style>
</resources>